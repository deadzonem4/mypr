{% extends "ZingCoreAdminBundle::layout.html.twig" %}
{% block body %}

<div id="content-column" class="col-lg-12 col-md-12">
    <div class="box">
        <div class="box-title">Contact ID:{{ contact.getId() }} <span class="help">/ {{ contact.getDateAdded()|date }}</span></div>
        <div class="box-content">
            <div class="row">
            <div class="col-md-12">
                <div class="title">Message</div>
                <ul class="list-unstyled bordered-list">
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Name:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ contact.getName() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Email:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ contact.getEmail() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Phone:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ contact.getPhone() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Subject:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ contact.getSubject() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Message:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ contact.getMessage() }}</div>
                    </li>
                    {% if contact.getAffiliate()|length > 0 %}
                        <li>
                            <div class="col-md-12 col-xlg-1"><strong>Affiliate:</strong></div>
                            <div class="col-md-12">
                                <ul class="list-unstyled bordered-list">
                                    {% for af in contact.getAffiliate() %}
                                        <li>
                                            <div class="col-md-1"><strong>#{{ loop.index }}</strong></div>
                                            <div class="col-md-11">{{ af }}</div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </li>
                    {% endif %}
                </ul>
                <div class="row">
                    <div class="col-md-12">
                        <hr />
                    </div>
                    <div class="col-md-5 col-lg-3 col-xlg-2">
                        <form method="post">
                            <input type="hidden" name="zing_verify_code" value="{{ zing_verify_code }}" />
                            <input class="btn btn-success btn-block" type="submit" name="readed" value="Маркирай като Прочетено" />
                        </form>
                    </div>
                </div>
            </div><!-- /.col-md-12 -->
        </div>
    </div>
</div>
{% endblock %}