{% extends "ZingCoreAdminBundle::layout.html.twig" %}
{% block body %}

<div id="content-column" class="col-lg-12 col-md-12">
    <div class="box">
        <div class="box-title">Contact ID:{{ client_request.getId() }} <span class="help">/ {{ client_request.getDateAdded()|date }}</span></div>
        <div class="box-content">
            <div class="row">
            <div class="col-md-12">
                {% trans %}Client{% endtrans %} {% trans %}Request{% endtrans %}
                <ul class="list-unstyled bordered-list">
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Title Name:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ client_request.getTitleName() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>First Name:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ client_request.getFirstName() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Last name:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ client_request.getLastName() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>City:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ client_request.getCity() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Phone:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ client_request.getPhone() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Email:</strong></div>
                        <div class="col-md-10 col-xlg-11">{{ client_request.getEmail() }}</div>
                    </li>
                    <li>
                        <div class="col-md-2 col-xlg-1"><strong>Subscribe:</strong></div>
                        <div class="col-md-10 col-xlg-11">
                            {% if client_request.getSubscribe() == 1 %}
                                    <span class="text-success">ДА</span>
                                {% else %}
                                    <span class="text-danger">НЕ</span>
                            {% endif %}
                        </div>
                    </li>
                    {% if client_request.getAffiliate()|length > 0 %}
                        <li>
                            <div class="col-md-12 col-xlg-1"><strong>Affiliate:</strong></div>
                            <div class="col-md-12">
                                <ul class="list-unstyled bordered-list">
                                    {% for af in client_request.getAffiliate() %}
                                        <li>
                                            <div class="col-md-1"><strong>#{{ loop.index }}</strong></div>
                                            <div class="col-md-11">{{ af }}</div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </li>
                    {% endif %}
                </ul>
                <div class="row">
                    <div class="col-md-12">
                        <hr />
                    </div>
                    <div class="col-md-5 col-lg-3 col-xlg-2">
                        <form method="post">
                            <input type="hidden" name="zing_verify_code" value="{{ zing_verify_code }}" />
                            <input class="btn btn-success btn-block" type="submit" name="readed" value="Маркирай като Прочетено" />
                        </form>
                    </div>
                </div>
            </div><!-- /.col-md-12 -->
        </div>
    </div>
</div>
{% endblock %}