<form class="block_content" method="post">

    {% set static = block.getContentByType( 'static' ) %}
    {% set per_page = to_string(static['per_page']) %}
    {% set pagination_range = to_string(static['pagination_range']) %}

    <div class="form-group">
        <label>Default products per page</label>
        <select name="static[per_page]" type="text" class="form-control">
            {% for i in [
            3*1, 3*2, 3*3, 3*4, 3*5, 3*6, 3*7, 3*8, 3*9, 3*10,
            3*15, 3*20, 3*25, 3*30, 3*40, 3*50, 3*60, 3*70, 3*80, 3*90, 3*100
            ] %}
                <option value="{{ i }}" {% if per_page == i %}selected{% endif %}>{{ i }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label>Pagination range <span class="help">/ For default choose 3</span></label>
        <select name="static[pagination_range]" type="text" class="form-control">
            {% for i in 0..30 %}
                <option value="{{ i }}" {% if pagination_range == i %}selected{% endif %}>{{ i }}</option>
            {% endfor %}
        </select>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <input class="btn btn-lg btn-form save-trigger" type="submit" name="save" value="SAVE" style="padding-left: 50px; padding-right: 50px;" />
        </div>
    </div>
</form>