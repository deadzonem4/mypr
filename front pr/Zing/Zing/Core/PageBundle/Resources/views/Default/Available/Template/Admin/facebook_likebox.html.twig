<form class="block_content" id="form-block-{{ rel_id }}" method="post">
    {% set static = block.getContentByType( 'static' ) %}
    {% set link = to_string(static['link']) %}
    {% set width = to_string(static['width']) %}
    {% set height = to_string(static['height']) %}

    <div class="form-group">
        <label>Link</label>
        <input name="static[link]" type="text" class="form-control" placeholder="Link" value="{{ link }}">
    </div>
        
    <div class="form-group">
        <label>Width <span class="help">/ default: 100%</span></label>
        <input name="static[width]" type="text" class="form-control" placeholder="Width" value="{{ width }}">
    </div>
        
    <div class="form-group">
        <label>Height <span class="help">/ default: 300px</span></label>
        <input name="static[height]" type="text" class="form-control" placeholder="Height" value="{{ height }}">
    </div>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <input class="btn btn-lg btn-form save-trigger" type="submit" name="save" value="SAVE" style="padding-left: 50px; padding-right: 50px;" />
        </div>
    </div>
</form>